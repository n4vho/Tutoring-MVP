generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
}

enum StudentStatus {
  ACTIVE
  PAUSED
  GRADUATED
  DROPPED
}

enum EnrollmentRequestStatus {
  NEW
  CONTACTED
  APPROVED
  REJECTED
}

enum PaymentCategory {
  ADMISSION
  MONTHLY
  MODEL_TEST
  OTHER
}

model User {
  id        String   @id @default(cuid())
  role      Role     @default(ADMIN)
  phone     String?  @unique
  username  String?  @unique
  pinHash   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  payments  Payment[]

  @@index([phone])
  @@index([username])
}

model Batch {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  monthlyFee  Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  students    Student[]
  assessments Assessment[]
}

model Student {
  id             String        @id @default(cuid())
  registrationNo String        @unique
  fullName       String
  phone          String?
  school         String?
  grade          String?
  status         StudentStatus @default(ACTIVE)
  photoUrl       String?
  batchId        String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  batch           Batch?            @relation(fields: [batchId], references: [id], onDelete: SetNull)
  assessmentScores AssessmentScore[]
  enrollmentRequest EnrollmentRequest?
  payments        Payment[]

  @@index([registrationNo])
  @@index([status])
  @@index([batchId])
}

model Assessment {
  id        String   @id @default(cuid())
  batchId   String
  title     String
  subject   String
  date      DateTime
  maxMarks  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  batch         Batch            @relation(fields: [batchId], references: [id], onDelete: Cascade)
  assessmentScores AssessmentScore[]

  @@index([batchId])
}

model AssessmentScore {
  id           String    @id @default(cuid())
  assessmentId String
  studentId    String
  score        Int?
  remarks      String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  assessment Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  student    Student    @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([assessmentId, studentId])
  @@index([assessmentId])
  @@index([studentId])
}

model EnrollmentRequest {
  id               String                  @id @default(cuid())
  referenceId      String                  @unique
  studentName      String
  phone            String
  grade            String?
  school           String?
  subjects         String?
  message          String?
  status           EnrollmentRequestStatus @default(NEW)
  convertedStudentId String?               @unique
  createdAt        DateTime                @default(now())
  updatedAt        DateTime                @updatedAt

  convertedStudent Student?                @relation(fields: [convertedStudentId], references: [id], onDelete: SetNull)

  @@index([status])
  @@index([createdAt])
  @@index([convertedStudentId])
  @@index([referenceId])
}

model ReceiptCounter {
  monthKey     String   @id // Format: "YYYY-MM" (e.g., "2026-01")
  lastNumber   Int      @default(0)
  updatedAt    DateTime @updatedAt
}

model Payment {
  id              String         @id @default(cuid())
  studentId       String
  amount          Int
  category        PaymentCategory
  appliesToMonth  DateTime
  paidAt          DateTime       @default(now())
  createdAt       DateTime       @default(now())
  createdByUserId String
  note            String?
  receiptNo       String?        @unique
  receiptIssuedAt DateTime?     @default(now())

  student         Student        @relation(fields: [studentId], references: [id], onDelete: Cascade)
  createdByUser   User           @relation(fields: [createdByUserId], references: [id], onDelete: Restrict)

  @@index([studentId, appliesToMonth])
  @@index([studentId, category])
  @@index([receiptNo])
}
